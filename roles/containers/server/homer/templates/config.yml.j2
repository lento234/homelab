# Homepage configuration

title: "Homelab"
subtitle: "{{ ansible_hostname }}"
logo: "assets/tools/homer.svg"

header: true
footer: '<p>Made with <i class="fas fa-heart"></i> by <a href="https://lento234.ch/">Lento</a>.</p>'

# columns: "3"
connectivityCheck: true

# Optional theme customization
theme: default
colors:
  light:
    highlight-primary: "#3367d6"
    highlight-secondary: "#4285f4"
    highlight-hover: "#5a95f5"
    background: "#f5f5f5"
    card-background: "#ffffff"
    text: "#363636"
    text-header: "#ffffff"
    text-title: "#303030"
    text-subtitle: "#424242"
    card-shadow: rgba(0, 0, 0, 0.1)
    link-hover: "#363636"
  dark:
    highlight-primary: "#2E3440"
    highlight-secondary: "#4C566A"
    highlight-hover: "#81A1C1"
    background: "#3B4252"
    card-background: "#2E3440"
    text: "#D8DEE9"
    text-header: "#D8DEE9"
    text-title: "#81A1C1"
    text-subtitle: "#81A1C1"
    card-shadow: rgba(0, 0, 0, 0.4)
    link-hover: "#BF616A"

# Optional navbar
links:
  - name: "GitHub Repo"
    icon: "fab fa-github"
    url: "https://github.com/lento234/homelab"
    target: "_blank"

# Services
services:
  - name: "Media"
    icon: "fas fa-film"
    items:
      - name: "Plex Media Server"
        logo: "assets/tools/plex.png"
        subtitle: "Stream Movies & TV Shows"
        url: "http://{{ ansible_hostname }}.{{ domain_name }}:32400"
        target: "_blank"

      - name: "Photoprism"
        logo: "assets/tools/photoprism.svg"
        subtitle: "Photo storage at home"
        url: "http://{{ ansible_hostname }}.{{ domain_name }}:2342"
        target: "_blank"

      - name: "Salt TV"
        logo: "assets/tools/salt-tv.svg"
        subtitle: "Stream TV live and on demand."
        url: "https://tv.salt.ch/"
        target: "_blank"
        tag: "extern"

      - name: "Freshrss"
        logo: "assets/tools/freshrss.png"
        subtitle: "RSS feed aggregator"
        url: "http://{{ ansible_hostname }}.{{ domain_name }}:11111"
        target: "_blank"

  - name: "File Storage & Sharing"
    icon: "fas fa-folder"
    items:
      - name: "Nextcloud"
        logo: "assets/tools/nextcloud.png"
        subtitle: "File hosting at home"
        url: "http://{{ ansible_hostname }}.{{ domain_name }}:8008"
        target: "_blank"

      - name: "Syncthing"
        logo: "assets/tools/syncthing.png"
        subtitle: "File synchronization"
        url: "http://{{ ansible_hostname }}.{{ domain_name }}:8384"
        target: "_blank"

      - name: "Transmission"
        logo: "assets/tools/transmission.svg"
        subtitle: "Bittorrent client"
        url: "http://{{ ansible_hostname }}.{{ domain_name }}:9091"
        target: "_blank"

  - name: "Monitoring"
    icon: "fas fa-desktop"
    items:
      - name: "Glances"
        logo: "assets/tools/glances.png"
        subtitle: "Monitoring tool"
        url: "http://{{ ansible_hostname }}.{{ domain_name }}:61208"
        target: "_blank"

      - name: "Munin"
        logo: "assets/tools/munin.png"
        url: "http://{{ ansible_hostname }}.{{ domain_name }}:4343"
        target: "_blank"

  - name: "Automation"
    icon: "fas fa-cogs"
    items:
      - name: "Home Assistant"
        logo: "assets/tools/hass.svg"
        subtitle: "Home automation"
        url: "http://{{ ansible_hostname }}.{{ domain_name }}:8123"
        target: "_blank"

  - name: "Server"
    icon: "fas fa-server"
    items:
      - name: "Portainer"
        logo: "assets/tools/portainer.png"
        subtitle: "Docker Container Management"
        url: "http://{{ ansible_hostname }}.{{ domain_name }}:9000"
        type: "Portainer"
        apikey: "{{ portainer_api_key }}"

  - name: "Cluster"
    icon: "fas fa-network-wired"
    items:
      - name: "{{ nas.hostname }}"
        icon: "fas fa-database"
        url: "http://{{ nas.hostname }}.{{ domain_name}}"
        tag: "nas"

      - name: "styx"
        icon: "fas fa-anchor"
        url: "http://styx:8080"
